<?xml version="1.0" encoding="utf-8"?>


<resources>

	<declare-styleable name = "WBSView">
		<!--The value for the left side of x axis-->
		<attr name = "min_range" format = "float" />
		<!--The value for the right side of x axis-->
		<attr name = "max_range" format = "float" />
		<attr name = "thumb_color" format = "color" />
		<attr name = "thumb_image" format = "reference" />
		<attr name = "draw_thumb_text" format = "boolean" />
		<attr name = "thumb_text_size" format = "float" />
		<attr name = "thumb_text_color" format = "color" />
		<attr name = "thumb_text_font" format = "string" />

	</declare-styleable>

	<declare-styleable name = "WBSNotchView" parent = "WBSView">
		<!-- The value of the widget. If set in xml the widget will be initialized to this value.  -->
		<attr name = "value_current" format = "float" />
		<!--The value for the left side of the x axis, the minimum x value, default 0-->
		<attr name = "min_range" />
		<!--The value for the right side of the x axis, the maximum x value, default 100 -->
		<attr name = "max_range" />
		<!--The number of major / big notch marks, must be two or larger,
		optional only set if you want something a bit wacky -->
		<attr name = "major_count" format = "integer" />
		<!--The number of minor / small notch marks between every major notch mark. Usually odd, default 3 -->
		<attr name = "minor_per_major_count" format = "integer" />

		<!--The distance between min_range and max_range on the notches.  Use will have to scroll this distance between min and max.
		 default is screen width * 2 -->
		<attr name = "notch_bar_width" format = "integer" />
		<!--Same as notch_bar_width but this number is multiplied by the screen width.   -->
		<attr name = "notch_bar_width_screen_multiple" format = "integer" />
		<attr name = "major_notch_color" format = "color" />
		<attr name = "minor_notch_color" format = "color" />
		<attr name = "notch_text_size" format = "float" />
		<attr name = "notch_text_color" format = "color" />
		<attr name = "notch_text_font" format = "string" />

		<attr name = "thumb_color" />
		<attr name = "thumb_color_dimmed" format = "color" />
		<attr name = "thumb_image" />
		<attr name = "draw_thumb_text" />
		<attr name = "thumb_text_size" />
		<attr name = "thumb_text_color" />
		<attr name = "thumb_text_font" />
	</declare-styleable>

</resources>